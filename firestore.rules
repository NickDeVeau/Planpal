service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to all users under the "users" collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read access to all users under the "projects" collection
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid in resource.data.contributors;
    }
  }
}